package com.led.player.window;

/**
 * 数字式时钟属性
 * @author 1231
 *
 */
public class DigitalClockWindow {

	private int StartX = 0;
	private int StartY = 0;
	private int Width;
	private int Heiht;
	private int BorderType;
	private int BgClr;
	private Boolean TwoBitYear;
	private Boolean TwelveHour;
	private Boolean DateTimeStyle;
	private Boolean SingleLineShow;
	private Boolean ShowDay;
	private Boolean ShowCHADays;
	private Boolean ShowWeek;
	private Boolean ShowAmPm;
	private Boolean ShowSeconds;
	private TextViewAttr textviewattr = new TextViewAttr();
	
	public void setStartX(int par){
		this.StartX = par;
	}
	public void setStartY(int par){
		this.StartY = par;
	}
	public void setWidth(int par){
		this.Width = par;
	}
	public void setHeight(int par){
		this.Heiht = par;
	}
	public void setBorderType(int par){
		this.BorderType = par;
	}
	public void setBgClr(int par){
		this.textviewattr.setBgClr(par);
	}
	public void setWordClr(int clr){
		this.textviewattr.setWordClr(clr);
	}
	public void setFixedWordClr(int clr){
		this.textviewattr.setFixedWordClr(clr);
	}
	public void setLanguage(boolean language){
		this.textviewattr.setLanguage(language);
	}
	public void setContent(String Content){
		this.textviewattr.setContent(Content);
	}
	public void setItalic(int clr){
		this.textviewattr.setItalic(clr);
	}
	public void setUnderline(int clr){
		this.textviewattr.setUnderline(clr);
	}
	public void setFaceName(int i){
		this.textviewattr.setFaceName(i);
	}
	public void setIfHeight(int height){
		this.textviewattr.setHeight(height);
	}
	public void setWeight(int weight){
		this.textviewattr.setWeight(weight);
	}
	public void setTwoBitYear(Boolean mTwoBitYear){
		this.TwoBitYear = mTwoBitYear;
	}
	public void setDateTimeStyle(Boolean dateTimeStyle){
		this.DateTimeStyle = dateTimeStyle;
	}
	public void setTwelveHour(Boolean mTwelveHour){
		this.TwelveHour = mTwelveHour;
	}
	public void setSingleLineShow(Boolean mSingleLineShow){
		this.SingleLineShow = mSingleLineShow;
	}
	public void setShowDay(Boolean mShowDay){
		this.ShowDay = mShowDay;
	}
	public void setShowCHADays(Boolean mShowCHADays){
		this.ShowCHADays = mShowCHADays;
	}
	public void setShowAmPm(Boolean mShowAmPm){
		this.ShowAmPm = mShowAmPm;
	}
	public void setShowWeek(Boolean mShowWeek){
		this.ShowWeek = mShowWeek;
	}
	public void setShowSeconds(Boolean mShowSeconds){
		this.ShowSeconds = mShowSeconds;
	}
	
	public TextViewAttr getTextViewAttr(){
		return textviewattr;
	}
	
	public int getStartX(){
		return StartX ;
	}
	public int getStartY(){
		return StartY;
	}
	public int getWidth(){
		return Width ;
	}
	public int getHeiht(){
		return Heiht ;
	}
	public int getBorderType(){
		return BorderType;
	}
	public Boolean getTwoBitYear(){
		return TwoBitYear;
	}
	public Boolean getTwelveHour(){
		return TwelveHour;
	}
	public Boolean getDateTimeStyle(){
		return DateTimeStyle;
	}
	public Boolean getSingleLineShow(){
		return SingleLineShow;
	}
	public Boolean getShowDay(){
		return ShowDay;
	}
	public Boolean getShowCHADays(){
		return ShowCHADays;
	}
	public Boolean getShowWeek(){
		return ShowWeek;
	}
	public Boolean getShowAmPm(){
		return ShowAmPm;
	}
	public Boolean getShowSeconds(){
		return ShowSeconds;
	}
}
