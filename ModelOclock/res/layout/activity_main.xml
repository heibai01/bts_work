<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.heibai.modeloclock"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/haha"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <com.heibai.modeloclock.view.MyAnalogClock
        android:id="@+id/my_clock"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:hand_hour="@drawable/default_clock_hour"
        app:hand_minute="@drawable/default_clock_min"
        app:hand_second="@drawable/default_clock_second" />

</LinearLayout>